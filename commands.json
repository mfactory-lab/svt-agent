{
  "commands": [
    {
      "name": "test",
      "desc": "",
      "args": [
        "sleep"
      ]
    },
    {
      "name": "pb_config",
      "desc": "install or update config file",
      "args": [
        {
          "name": "validator_name",
          "rules": "max:64"
        },
        {
          "name": "local_secrets_path",
          "rules": "max:128"
        },
        {
          "name": "swap_file_size_gb",
          "rules": "max:32,alphanumeric"
        },
        {
          "name": "ramdisk_size_gb",
          "rules": "max:32,alphanumeric"
        }
      ]
    },
    {
      "name": "pb_cluster_restart",
      "desc": "restart cluster",
      "args": [
        "@/etc/sv_manager/sv_manager.conf"
      ]
    },
    {
      "name": "pb_install_monitoring",
      "desc": "install monitoring",
      "args": [
        "@/etc/sv_manager/sv_manager.conf"
      ]
    },
    {
      "name": "pb_install_validator",
      "desc": "install solana validator",
      "args": [
        {
          "name": "validator_name",
          "rules": "max:64"
        },
        {
          "name": "solana_user",
          "rules": "max:64,alphanumeric"
        },
        {
          "name": "solana_version",
          "rules": "regex:^(?:(\\d+)\\.)?(?:(\\d+)\\.)?(\\*|\\d+)$"
        },
        {
          "name": "local_secrets_path",
          "rules": "max:128"
        }
      ]
    },
    {
      "name": "pb_stop_validator",
      "desc": "stop solana validator",
      "args": []
    },
    {
      "name": "pb_update_validator",
      "desc": "update solana validator",
      "args": [
        "@/etc/sv_manager/sv_manager.conf"
      ]
    }
  ]
}
